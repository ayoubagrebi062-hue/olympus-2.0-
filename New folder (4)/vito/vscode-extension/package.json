{
  "name": "olympus-vscode",
  "displayName": "OLYMPUS AI Agent Builder",
  "description": "Build complete applications with AI agents directly from VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:olympus.createProject",
    "onCommand:olympus.buildComponent",
    "onCommand:olympus.runAgents",
    "onView:olympusExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "olympus.createProject",
        "title": "OLYMPUS: Create New Project",
        "category": "OLYMPUS"
      },
      {
        "command": "olympus.buildComponent",
        "title": "OLYMPUS: Build Component",
        "category": "OLYMPUS"
      },
      {
        "command": "olympus.runAgents",
        "title": "OLYMPUS: Run Agent Pipeline",
        "category": "OLYMPUS"
      },
      {
        "command": "olympus.showProgress",
        "title": "OLYMPUS: Show Build Progress",
        "category": "OLYMPUS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "olympus.buildComponent",
          "when": "resourceExtname =~ /\\.(tsx|ts|jsx|js)$/ && !inDebugMode",
          "group": "7_modification@1"
        }
      ],
      "explorer/context": [
        {
          "command": "olympus.createProject",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "olympusExplorer",
          "name": "OLYMPUS Builds",
          "icon": "$(rocket)",
          "contextualTitle": "OLYMPUS AI Builder"
        }
      ]
    },
    "configuration": {
      "title": "OLYMPUS",
      "properties": {
        "olympus.api.endpoint": {
          "type": "string",
          "default": "https://api.olympus.ai",
          "description": "OLYMPUS API endpoint URL"
        },
        "olympus.api.key": {
          "type": "string",
          "description": "OLYMPUS API key for authentication"
        },
        "olympus.agent.model": {
          "type": "string",
          "default": "claude-sonnet-4-20250514",
          "enum": [
            "claude-sonnet-4-20250514",
            "gpt-4-turbo",
            "claude-3-haiku"
          ],
          "description": "Default AI model for agent execution"
        },
        "olympus.build.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save files after agent modifications"
        },
        "olympus.ui.theme": {
          "type": "string",
          "default": "system",
          "enum": ["light", "dark", "system"],
          "description": "UI theme for OLYMPUS panels"
        }
      }
    },
    "keybindings": [
      {
        "command": "olympus.buildComponent",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorTextFocus && resourceExtname =~ /\\.(tsx|ts|jsx|js)$/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.31.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.13.0"
  }
}