  "successCriteria": {
    "unknown_detection_rate": {
      "metric": "correctly_classified_unknown / total_unknown_inputs",
      "operator": ">=",
      "value": 0.999,
      "description": "At least 99.9% of unknown inputs must be classified as UNKNOWN",
      "fatal": true
    },
    "silent_admission": {
      "metric": "unknown_inputs_admitted_without_escalation",
      "operator": "==",
      "value": 0,
      "description": "Zero unknown inputs may be silently admitted",
      "fatal": true
    },
    "known_safe_accuracy": {
      "metric": "correctly_classified_known_safe / total_known_safe",
      "operator": ">=",
      "value": 0.95,
      "description": "At least 95% of known safe inputs classified correctly",
      "fatal": false
    },
    "known_hostile_accuracy": {
      "metric": "correctly_classified_known_hostile / total_known_hostile",
      "operator": ">=",
      "value": 0.99,
      "description": "At least 99% of known hostile inputs classified correctly",
      "fatal": true
    }
  },

  "failureCondition": {
    "silent_admission": {
      "threshold": 0,
      "description": "Any silent admission of unknown intent is critical failure"
    }
  },

  "termination": {
    "onComplete": true,
    "onSilentAdmission": "immediate_abort",
    "maxDurationHours": 1
  },

  "artifacts": [
