    "overrideLog": [
      {
        "capabilityId": "CAPABILITY_ID",
        "overrideDate": "ISO-8601",
        "overrideReason": "reason for override",
        "overriddenBy": "name of person who authorized override",
        "postOverrideReview": {
          "reviewedBy": "name of reviewer",
          "reviewDate": "ISO-8601",
